<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fougas.decoder">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />


    <application android:name="android.support.multidex.MultiDexApplication"
    android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/appName"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.DisplayActivity" />
        <activity android:name=".Activity.EndCallActivity" />
        <activity android:name=".Activity.ParameterActivity"></activity>
        <activity android:name=".Activity.HelpActivity"></activity>
        <service android:name=".Service.SpeechService"></service>
    </application>

</manifest>